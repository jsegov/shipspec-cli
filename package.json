{
  "name": "shipspec-cli",
  "version": "0.2.0",
  "description": "Autonomous semantic engine for technical documentation and specification generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ship-spec": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/test/**",
    "!dist/**/*.test.*",
    "!dist/**/*.map",
    "!dist/**/*.d.ts.map",
    "tui/dist/**",
    "tui/bunfig.toml",
    "tui/package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run build:tui",
    "build:tui": "cd tui && bun run build",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "lint": "eslint src tui",
    "lint:fix": "eslint src tui --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tui/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tui/**/*.{ts,tsx}\"",
    "typecheck:backend": "tsc --noEmit",
    "typecheck:tui": "tsc --project tui/tsconfig.json --noEmit",
    "typecheck": "npm run typecheck:backend && npm run typecheck:tui",
    "test:backend": "vitest run",
    "test:tui": "cd tui && bun test",
    "test": "npm run test:backend && npm run test:tui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm test",
    "prepack": "npm run build"
  },
  "engines": {
    "node": "^20.17.0 || ^22.13.0 || >=23.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/segov/shipspec-cli.git"
  },
  "keywords": [
    "cli",
    "code-analysis",
    "rag",
    "langgraph",
    "production-readiness"
  ],
  "author": "segov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/segov/shipspec-cli/issues"
  },
  "homepage": "https://github.com/segov/shipspec-cli#readme",
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@lancedb/lancedb": "^0.23.0",
    "@langchain/anthropic": "^1.3.1",
    "@langchain/core": "^1.1.6",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/langgraph-checkpoint": "^1.0.0",
    "@langchain/langgraph-checkpoint-sqlite": "^1.0.0",
    "@langchain/ollama": "^1.1.0",
    "@langchain/openai": "^1.2.0",
    "@langchain/tavily": "^1.2.0",
    "@langchain/textsplitters": "^1.0.1",
    "apache-arrow": "^18.1.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "duck-duck-scrape": "^2.2.7",
    "fast-glob": "^3.3.3",
    "keytar": "^7.9.0",
    "langchain": "^1.2.1",
    "openai": "^6.15.0",
    "p-limit": "^7.2.0",
    "tree-sitter-wasms": "^0.1.13",
    "web-tree-sitter": "^0.21.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
